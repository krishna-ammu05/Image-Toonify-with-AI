<%- layout("/layouts/boilerplate.ejs") %>
<!-- to add layout to home pagen -->

<!-- Hero Section -->
<section class="hero-gradient py-5">
  <div class="container">
    <div class="row align-items-center min-vh-75">
      <!-- Left Content -->
      <div class="col-lg-6 mb-5 mb-lg-0">
        <h1 class="hero-title display-4 mb-4">
          Turn Your Photos<br />
          Into Stunning<br />
          Cartoon Styles
        </h1>

        <a
          href="/auth/login"
          class="btn orange-btn text-white btn-lg px-5 py-3 fw-medium"
        >
          Get Started
        </a>
      </div>

      <!-- Right Content - Demo Images -->
      <div class="col-lg-6">
        <div class="row g-3">
          <!-- Original Photo -->
          <div class="col-6">
            <div class="demo-image overflow-hidden">
              <img
                src="/Original.jpg"
                alt="Original photo of a woman"
                class="img-fluid w-100 h-100 object-fit-cover"
              />
            </div>
          </div>

          <!-- Cartoon Version -->
          <div class="col-6">
            <div
              class="demo-image overflow-hidden"
              style="background-color: #f4a261"
            >
              <img
                src="/Cartoon.jpg"
                alt="Cartoon version of the photo"
                class="img-fluid w-100 h-100 object-fit-cover"
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Features Section -->
<section id="features" class="py-5 bg-gradient-teal">
  <div class="container">
    <div class="row text-center mb-5">
      <div class="col-lg-8 mx-auto">
        <h2 class="display-4 fw-bold text-dark mb-3">Features</h2>
        <p class="fs-5 text-secondary">
          Discover what makes Cartoonify the best AI photo transformation tool
        </p>
      </div>
    </div>

    <div class="row g-4">
      <div class="col-lg-4 col-md-6">
        <div class="feature-card h-100 text-center">
          <div class="feature-icon bg-gradient-blue mb-3 mx-auto">
            <i class="fas fa-bolt"></i>
          </div>
          <h5 class="fw-bold mb-3">Lightning Fast Processing</h5>
          <p class="text-muted">
            Transform your photos in under 10 seconds with our optimized AI
            algorithms. No waiting, just instant magic.
          </p>
        </div>
      </div>

      <div class="col-lg-4 col-md-6">
        <div class="feature-card h-100 text-center">
          <div class="feature-icon bg-gradient-purple mb-3 mx-auto">
            <i class="fas fa-palette"></i>
          </div>
          <h5 class="fw-bold mb-3">Multiple Art Styles</h5>
          <p class="text-muted">
            Choose from cartoon, anime, sketch, oil painting, watercolor, and
            more. Each style carefully crafted by AI.
          </p>
        </div>
      </div>

      <div class="col-lg-4 col-md-6">
        <div class="feature-card h-100 text-center">
          <div class="feature-icon bg-gradient-green mb-3 mx-auto">
            <i class="fas fa-crown"></i>
          </div>
          <h5 class="fw-bold mb-3">High Resolution Output</h5>
          <p class="text-muted">
            Get crisp, high-quality results perfect for printing, sharing, or
            professional use. No pixelation, just perfection.
          </p>
        </div>
      </div>

      <div class="col-lg-4 col-md-6">
        <div class="feature-card h-100 text-center">
          <div class="feature-icon bg-gradient-orange mb-3 mx-auto">
            <i class="fas fa-shield-alt"></i>
          </div>
          <h5 class="fw-bold mb-3">Privacy Protected</h5>
          <p class="text-muted">
            Your photos are automatically deleted after processing. We respect
            your privacy and don't store personal images.
          </p>
        </div>
      </div>

      <div class="col-lg-4 col-md-6">
        <div class="feature-card h-100 text-center">
          <div class="feature-icon bg-gradient-pink mb-3 mx-auto">
            <i class="fas fa-mobile-alt"></i>
          </div>
          <h5 class="fw-bold mb-3">Mobile Friendly</h5>
          <p class="text-muted">
            Works perfectly on all devices. Transform photos on-the-go with our
            responsive design and intuitive interface.
          </p>
        </div>
      </div>

      <div class="col-lg-4 col-md-6">
        <div class="feature-card h-100 text-center">
          <div class="feature-icon bg-gradient-teal mb-3 mx-auto">
            <i class="fas fa-infinity"></i>
          </div>
          <h5 class="fw-bold mb-3">Unlimited Usage</h5>
          <p class="text-muted">
            No limits on the number of photos you can transform. Create as many
            artistic masterpieces as you want, for free.
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- About Section -->
<section class="py-5 bg-white">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-10">
        <h2 class="about-title display-5 mb-4">About Cartoonify</h2>
        <p class="about-text fs-5 mb-0">
          Cartoonify is a web app that lets you transform normal photos into
          stunning artworks. Choose from pencil sketches, colorful cartoons, or
          dreamy Ghibli styles.
        </p>
      </div>
    </div>
  </div>
</section>

<style>
  .orange-btn {
    background-color: #ea580c;
    transition: all 0.3s ease;
  }

  .orange-btn:hover {
    background-color: #dc2626;
    transform: translateY(-2px);
  }

  .hero-title {
    color: #1f2937;
    font-weight: 800;
    line-height: 1.1;
  }

  .process-text {
    color: #6b7280;
    font-weight: 500;
  }

  .about-title {
    color: #1f2937;
    font-weight: 700;
  }

  .about-text {
    color: #4b5563;
    line-height: 1.6;
  }

  .demo-image {
    height: 25rem !important;
    border-radius: 12px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }

  .text-orange-600 {
    color: #ea580c;
  }
</style>

<script>
  // Add interactive effects to the hero section
  document.addEventListener("DOMContentLoaded", function () {
    // Add loading animation to Get Started button
    const getStartedBtn = document.querySelector(".orange-btn");
    if (getStartedBtn) {
      getStartedBtn.addEventListener("click", function (e) {
        this.innerHTML =
          '<i class="fas fa-spinner fa-spin me-2"></i>Loading...';
        // You can add actual navigation logic here
        setTimeout(() => {
          this.innerHTML = "Get Started";
        }, 2000);
      });
    }

    // Add subtle animation to demo images on load
    const demoImages = document.querySelectorAll(".demo-image");
    demoImages.forEach((img, index) => {
      img.style.opacity = "0";
      img.style.transform = "translateY(20px)";
      setTimeout(() => {
        img.style.transition = "all 0.6s ease";
        img.style.opacity = "1";
        img.style.transform = "translateY(0)";
      }, 300 + index * 200);
    });
  });

  // Add subtle animation to demo images on load
  const demoImages = document.querySelectorAll(".demo-image");
  demoImages.forEach((img, index) => {
    img.style.opacity = "0";
