  <style>
    .orange-btn {
      background-color: #ea580c;
      transition: all 0.3s ease;
    }

    .orange-btn:hover {
      background-color: #dc2626;
      transform: translateY(-2px);
    }

    .hero-title {
      color: #1f2937;
      font-weight: 800;
      line-height: 1.1;
    }

    .process-text {
      color: #6b7280;
      font-weight: 500;
    }

    .about-title {
      color: #1f2937;
      font-weight: 700;
    }

    .about-text {
      color: #4b5563;
      line-height: 1.6;
    }

    .demo-image {
      height: 25rem !important;
      border-radius: 12px;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    }

    .text-orange-600 {
      color: #ea580c;
    }

    /* Hover Overlay Effect */
    .feature-card {
      position: relative;
      overflow: hidden;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .feature-card:hover {
      transform: translateY(-8px);
      box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
    }

    .feature-card .overlay {
      background: rgba(0, 0, 0, 0.6);
      opacity: 0;
      transition: opacity 0.4s ease;
    }

    .feature-card:hover .overlay {
      opacity: 0.1;
    }

    /* Card hover overlay effect */
    .showcase-card {
      position: relative;
      overflow: hidden;
      border-radius: 12px;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .showcase-card img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.4s ease;
    }
    .showcase-card:hover img {
      transform: scale(1.08);
    }
    .overlay {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      background: rgba(0, 0, 0, 0.6);
      color: #fff;
      padding: 12px;
      text-align: center;
      font-weight: 600;
      transition: background 0.3s ease;
    }
    .showcase-card:hover .overlay {
      background: rgba(0, 0, 0, 0.8);
    }

    
  .feature-img {
    width: 100px; /* control size */
    height: 100px;
    object-fit: cover;
    border-radius: 50%; /* makes it circular */
    margin: 0 auto; /* centers it */
    display: block;
    box-shadow: 0 4px 10px rgba(0,0,0,0.15);
  }

  </style>

  <script>
    // Add interactive effects to the hero section
    document.addEventListener("DOMContentLoaded", function () {
      // Add loading animation to Get Started button
      const getStartedBtn = document.querySelector(".orange-btn");
      if (getStartedBtn) {
        getStartedBtn.addEventListener("click", function (e) {
          this.innerHTML =
            '<i class="fas fa-spinner fa-spin me-2"></i>Loading...';
          // You can add actual navigation logic here
          setTimeout(() => {
            this.innerHTML = "Get Started";
          }, 2000);
        });
      }

      // Add subtle animation to demo images on load
      const demoImages = document.querySelectorAll(".demo-image");
      demoImages.forEach((img, index) => {
        img.style.opacity = "0";
        img.style.transform = "translateY(20px)";
        setTimeout(() => {
          img.style.transition = "all 0.6s ease";
          img.style.opacity = "1";
          img.style.transform = "translateY(0)";
        }, 300 + index * 200);
      });
    });

    // Add subtle animation to demo images on load
    const demoImages = document.querySelectorAll(".demo-image");
    demoImages.forEach((img, index) => {
      img.style.opacity = "0";
