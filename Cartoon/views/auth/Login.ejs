<%- layout("/layouts/boilerplate.ejs") -%>

<!-- Lottie player -->
<script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>

<style>
  body {
    font-family: "Poppins", sans-serif;
    min-height: 70vh;
    width:100%;
    margin: 0;
    display: flex;
    flex-direction: column;
    background: #f6f9fc; /* page background */
  }

  /* Entire login section with gradient background */
  .auth-wrapper {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    background: linear-gradient(90deg, #6dd5ed, #2193b0);
    min-height: calc(100vh - 50px); /* leave footer space */
    width: 100%;
    /* padding: 3rem 2rem; */
    border-radius: 24px 24px 0 0;
  }

  .auth-container {
    display: flex;
    flex: 1;
    gap: 0;
    width: 100%;
    max-width: 12000px;
  }

  /* Left & Right Sections */
  .auth-section {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 500px;
  }

  /* .auth-left {
    padding: 2rem;
  } */

  .auth-right {
    /* padding: 2rem; */
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  /* Login Card */
  .auth-card {
    background: #ffffff;
    border-radius: 18px;
    padding: 2.5rem 2rem 2rem;
    box-shadow: 0 6px 24px rgba(0, 0, 0, 0.08);
    width: 100%;
    max-width: 400px;
  }

  .auth-title {
    font-weight: 700;
    color: #2c3e50;
    text-align: center;
    font-size: 1.8rem;
  }

  .auth-title span {
    color: #2193b0;
  }

  .form-label {
    font-weight: 600;
    color: #34495e;
  }

  .form-control {
    border-radius: 10px;
    padding: 0.75rem;
    border: 1.5px solid #e5eaf0;
    transition: 0.3s ease;
  }

  .form-control:focus {
    border-color: #2193b0;
    box-shadow: 0 0 8px rgba(0, 114, 255, 0.15);
  }

  .auth-btn {
    background: linear-gradient(90deg, #6dd5ed, #2193b0);
    border: none;
    color: #fff;
    font-weight: 600;
    transition: 0.3s ease;
    border-radius: 12px;
    padding: 0.8rem;
  }

  .auth-btn:hover {
    transform: translateY(-2px);
    opacity: 0.9;
  }

  .auth-link {
    text-align: center;
    margin-top: 1rem;
    font-size: 0.95rem;
  }

  .auth-link a {
    color: #fff;
    font-weight: 600;
    text-decoration: underline;
  }

  .auth-illustration lottie-player {
    width: 100%;
    max-width: 400px;
    height: auto;
  }

  .overlay-text {
    position: absolute;
    bottom: 1.5rem;
    text-align: center;
    width: 100%;
    color: #fff;
    font-size: 1.2rem;
    font-weight: 600;
  }

  /* Footer */
  .page-footer {
    text-align: center;
    font-size: 0.85rem;
    color: #777;
    padding: 1rem 0;
    border-top: 1px solid #eaeaea;
  }

  /* Responsive */
  @media (max-width: 992px) {
    .auth-container {
      flex-direction: column;
      width: 100%;
    }
    .auth-left,
    .auth-right {
      width: 100%;
      padding: 1rem;
    }
    .auth-illustration lottie-player {
      max-width: 300px;
    }
  }
</style>

<div class="auth-wrapper">
  <div class="auth-container">
    <!-- Left: Login Card -->
    <div class="auth-section auth-left">
      <div class="auth-card">
        <h1 class="auth-title mb-4">
          Login to <span>Toonify</span>
        </h1>
        <form action="/login" method="post" class="needs-validation" novalidate>
          <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input
              type="text"
              id="username"
              name="username"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please enter your username</div>
          </div>

          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please enter your password</div>
          </div>

          <button class="btn auth-btn w-100 mt-2">Login</button>
        </form>

        <p class="auth-link">
          Not registered yet? <a href="register"style="color: black;text-decoration: none; opacity: 0.7;">Create an account</a>
        </p>
      </div>
    </div>

    <!-- Right: Animation -->
    <div class="auth-section auth-right">
      <lottie-player
        src="https://assets9.lottiefiles.com/packages/lf20_jcikwtux.json"
        background="transparent"
        speed="1"
        loop
        autoplay
      ></lottie-player>
      <div class="overlay-text">
        Transform Your Photos Into Cartoons!
      </div>
    </div>
  </div>
</div>

<!-- Footer -->
<div class="page-footer">
  © <%= new Date().getFullYear() %> Toonify · All rights reserved
</div>
