<%- layout("/layouts/boilerplate.ejs") -%>
<body>
  <style>
    body {
      background: #f6f9fc;
      font-family: "Poppins", sans-serif;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }

    .auth-container {
      flex: 1;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 3rem 2rem;
    }

    .auth-card {
      background: #ffffff;
      border-radius: 18px;
      padding: 2.5rem 2rem 2rem;
      box-shadow: 0 6px 24px rgba(0, 0, 0, 0.08);
      max-width: 420px;
      width: 100%;
    }

    .auth-title {
      font-weight: 700;
      color: #2c3e50;
      text-align: center;
      font-size: 1.8rem;
    }

    .auth-title span {
      color: #0072ff;
    }

    .form-label {
      font-weight: 600;
      color: #34495e;
    }

    .form-control {
      border-radius: 10px;
      padding: 0.75rem;
      border: 1.5px solid #e5eaf0;
      transition: 0.3s ease;
    }

    .form-control:focus {
      border-color: #0072ff;
      box-shadow: 0 0 8px rgba(0, 114, 255, 0.15);
    }

    .auth-btn {
      background: linear-gradient(90deg, #6dd5ed, #2193b0);
      border: none;
      color: #fff;
      font-weight: 600;
      transition: 0.3s ease;
      border-radius: 12px;
      padding: 0.8rem;
    }

    .auth-btn:hover {
      transform: translateY(-2px);
      opacity: 0.9;
    }

    .auth-link {
      text-align: center;
      margin-top: 1rem;
      font-size: 0.95rem;
    }

    .auth-link a {
      color: #2193b0;
      font-weight: 600;
      text-decoration: none;
    }

    .auth-link a:hover {
      text-decoration: underline;
    }

    .showcase-card {
      background: linear-gradient(90deg, #6dd5ed, #2193b0);
      color: #fff;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      text-align: center;
      height: 80vh;
      border-radius: 18px;
      padding: 2rem;
    }

    .showcase-title {
      font-size: 1.5rem;
      font-weight: 700;
      margin-bottom: 1.5rem;
    }

    .showcase-images {
      display: flex;
      gap: 1rem;
      flex-wrap: wrap;
      justify-content: center;
    }

    .showcase-images img {
      max-width: 200px;
      border-radius: 16px;
      box-shadow: 0 4px 14px rgba(0, 0, 0, 0.2);
      transition: transform 0.3s ease;
    }

    .showcase-images img:hover {
      transform: scale(1.05);
    }

    @media (max-width: 992px) {
      .auth-container {
        flex-direction: column;
        gap: 2rem;
      }
      .showcase-card {
        width: 100%;
      }
    }
  </style>

  <div class="auth-container container">
    <div class="row w-100 align-items-center">
      <!-- Left Side - Login Form -->
      <div class="col-lg-6 col-md-6 col-sm-12 d-flex justify-content-center">
        <div class="auth-card">
          <h1 class="auth-title mb-4">Login to <span>Toonify</span></h1>
          <form
            action="/login"
            method="post"
            class="needs-validation"
            novalidate
          >
            <div class="mb-3">
              <label for="username" class="form-label">Username</label>
              <input
                type="text"
                id="username"
                name="username"
                class="form-control"
                required
              />
              <div class="invalid-feedback">Please enter your username</div>
            </div>

            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input
                type="password"
                id="password"
                name="password"
                class="form-control"
                required
              />
              <div class="invalid-feedback">Please enter your password</div>
            </div>

            <button class="btn auth-btn w-100 mt-2">Login</button>
          </form>

          <p class="auth-link">
            Not registered yet? <a href="register">Create an account</a>
          </p>
        </div>
      </div>

      <!-- Right Side - Showcase -->
      <div
        class="col-lg-6 col-md-6 col-sm-12 d-flex justify-content-center p-100"
      >
        <div class="showcase-card">
          <h2 class="showcase-title">Toonify Magic ✨</h2>
          <div class="showcase-images">
            <img src="https://placebear.com/250/250" alt="Sample toon" />
            <img src="https://placebear.com/250/250" alt="Sample toon" />
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="page-footer">
    © <%= new Date().getFullYear() %> Toonify · All rights reserved
  </div>
</body>
