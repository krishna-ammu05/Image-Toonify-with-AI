<%- layout("/layouts/boilerplate.ejs") -%>

<style>
  .auth-card {
    background: #ffffff;
    border-radius: 15px;
    padding: 2rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .auth-title {
    font-weight: bold;
    color: #2c3e50;
    text-align: center;
  }

  .auth-btn {
    background: linear-gradient(90deg, #00c6ff, #0072ff);
    border: none;
    color: #fff;
    font-weight: 600;
    transition: 0.3s ease;
  }

  .auth-btn:hover {
    opacity: 0.85;
  }

  .auth-link {
    text-align: center;
    margin-top: 1rem;
    font-size: 0.95rem;
  }

  .auth-link a {
    color: #0072ff;
    font-weight: 600;
    text-decoration: none;
  }

  .auth-link a:hover {
    text-decoration: underline;
  }

  @media (max-width: 768px) {
    .auth-card {
      padding: 1.5rem;
    }
    h1.auth-title {
      font-size: 1.6rem;
    }
    form input,
    form button {
      width: 100% !important;
    }
  }
</style>

<div class="row mt-5 justify-content-center signup">
  <div class="col-md-6 col-lg-4">
    <div class="auth-card">
      <h1 class="auth-title mb-4"><span class="text-primary">Toonify</span></h1>

      <form
        action="/register"
        method="post"
        class="needs-validation"
        novalidate
      >
        <!-- Full Name -->
        <div class="mb-3">
          <label for="username" class="form-label fw-semibold">FullName</label>
          <input
            type="text"
            id="username"
            name="user[fullname]"
            class="form-control"
            placeholder="Enter your fullname"
            required
          />
          <div class="invalid-feedback">Please enter fullname</div>
        </div>

        <!-- Username -->
        <div class="mb-3">
          <label for="username" class="form-label fw-semibold">Username</label>
          <input
            type="text"
            id="username"
            name="user[username]"
            class="form-control"
            placeholder="Enter your username"
            required
          />
          <div class="invalid-feedback">Please enter username</div>
        </div>

        <!-- Email -->
        <div class="mb-3">
          <label for="email" class="form-label fw-semibold">Email</label>
          <input
            type="email"
            id="email"
            name="user[email]"
            class="form-control"
            placeholder="Enter your email"
            required
          />
          <div class="invalid-feedback">Please enter a valid email</div>
        </div>

        <!-- Password -->
        <div class="mb-3">
          <label for="password" class="form-label fw-semibold">Password</label>
          <input
            type="password"
            id="password"
            name="user[password]"
            class="form-control"
            placeholder="Enter your password"
            required
          />
          <div class="invalid-feedback">Please enter password</div>
        </div>

        <!-- Submit Button -->
        <button class="btn auth-btn w-100 mt-2">register</button>
      </form>

      <!-- Login Link -->
      <div class="auth-link">
        Already registered? <a href="login">Login here</a>
      </div>
    </div>
  </div>
</div>
