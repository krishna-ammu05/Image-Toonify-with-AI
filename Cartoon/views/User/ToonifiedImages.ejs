<% layout('User/user_Boilerplate') -%>

<div class="container py-5">
  <!-- Page Title -->
  <h1 class="mb-5 text-center fw-bold text-gradient">üé® My Toonified Images</h1>

  <% if (images && images.length > 0) { %>
  <div class="row g-4">
    <% images.forEach(img => { %>
    <div class="col-12 col-sm-6 col-md-6 col-lg-4">
      <div
        class="card shadow-lg border-0 rounded-4 h-100 overflow-hidden hover-card"
      >
        <!-- Image Comparison -->
        <div class="row g-0 position-relative" style="min-height: 280px">
          <!-- Original -->
          <div class="col-6 position-relative">
            <img
              src="/<%= img.originalImage %>"
              class="img-fluid h-100 object-fit-cover"
              alt="Original Image"
            />
            <span
              class="badge bg-dark bg-opacity-75 position-absolute top-0 start-0 m-2 px-2 py-1 rounded-pill"
            >
              Original
            </span>
          </div>

          <!-- Toonified -->
          <div class="col-6 position-relative">
            <img
              src="/<%= img.cartoonImage %>"
              class="img-fluid h-100 object-fit-cover"
              alt="Toonified Image"
            />
            <span
              class="badge bg-info bg-opacity-75 text-dark position-absolute top-0 end-0 m-2 px-2 py-1 rounded-pill"
            >
              Toonified
            </span>
          </div>
        </div>

        <!-- Card Body -->
        <div class="card-body text-center p-4">
          <h5 class="card-title fw-bold text-truncate"><%= img.title %></h5>
          <p class="text-muted small mb-3">
            <i class="bi bi-calendar-event me-1"></i>
            <%= new Date(img.createdAt).toLocaleDateString() %>
          </p>
          <div class="d-flex justify-content-center gap-3">
            <form
              action="/<%= user.username %>/image/<%= img.cartoonImage %>/download"
            >
              <button
                type="submit"
                class="btn btn-sm btn-outline-success rounded-pill px-3"
              >
                ‚¨áÔ∏è Download
              </button>
            </form>

            <form
              action="/<%= user.username %>/image/<%= img._id %>?_method=DELETE"
              method="POST"
              onsubmit="return confirm('Are you sure you want to delete this image?');"
            >
              <button
                type="submit"
                class="btn btn-sm btn-outline-danger rounded-pill px-3"
              >
                <i class="bi bi-trash"></i> Delete
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
  <% } else { %>
  <!-- Empty State -->
  <div class="text-center p-5 bg-light rounded-4 shadow-sm">
    <i class="bi bi-emoji-smile fs-1 text-secondary d-block mb-3"></i>
    <p class="fw-semibold text-muted mb-1">
      You haven‚Äôt converted any images yet.
    </p>
    <p class="small text-muted mb-3">
      Start creating some fun toonified images!
    </p>
    <a
      href="/<%= user.username %>/upload"
      class="btn btn-primary rounded-pill px-4"
    >
      <i class="bi bi-magic"></i> Toonify Now
    </a>
  </div>
  <% } %>
</div>

<style>
  .text-gradient {
    background: linear-gradient(45deg, #6f42c1, #0d6efd);
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  .hover-card {
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }
  .hover-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
  }
</style>
