<% layout('User/user_Boilerplate') -%>
<body class="bg-light">
  <div class="container my-5">
    <!-- User Details -->
    <div class="row g-4 mb-4">
      <div class="col-md-6">
        <div class="card shadow-lg border-0 rounded-4 p-4 h-100">
          <div class="d-flex align-items-center justify-content-between">
            <div>
              <h4 class="fw-bold text-primary mb-1" id="userName">
                <%= user.fullname %>
              </h4>
              <p class="text-muted mb-1" id="userEmail"><%= user.email %></p>

              <!-- Show plan -->
              <span
                class="badge <%= user.plan === 'Free Plan' ? 'bg-secondary' : 'bg-success' %> px-3 py-2"
                id="userPlan"
              >
                <%= user.plan %>
              </span>

              <!-- Show expiry for paid plan -->
              <% if (user.plan !== "Free Plan" && user.planExpiry) { %>
              <p class="text-muted mt-2">
                ‚è≥ Expires on:
                <strong
                  ><%= new Date(user.planExpiry).toLocaleDateString() %></strong
                >
              </p>
              <% } %>

              <!-- If expired -->
              <% if (user.plan !== "Free Plan" && user.planExpiry && new
              Date(user.planExpiry) < new Date()) { %>
              <p class="text-danger fw-bold mt-2">
                ‚ö†Ô∏è Subscription expired!
                <a href="/<%= user.username %>/pricing">Renew Now</a>
              </p>
              <% } %>
            </div>
            <i
              class="bi bi-person-circle text-secondary"
              style="font-size: 2rem"
            ></i>
          </div>
        </div>
      </div>

      <!-- Usage Stats -->
      <div class="col-md-6">
        <div class="card shadow-lg border-0 rounded-4 p-4 text-center h-100">
          <h6 class="text-uppercase text-muted">Usage Stats</h6>
          <div class="d-flex justify-content-around mt-3">
            <div>
              <strong class="fs-5 text-dark" id="conversions">
                <%= user.conversions %>
              </strong>
              <p class="text-muted small mb-0">Conversions</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- My Gallery -->
    <h4 class="fw-bold text-secondary mb-4">üì∏ My Gallery</h4>
    <div class="row g-4">
      <% if (images && images.length > 0) { %> <% images.forEach(img => { %>
      <div class="col-12 col-sm-6 col-md-6 col-lg-4">
        <div
          class="card shadow-lg border-0 rounded-4 h-100 overflow-hidden hover-card"
        >
          <!-- Image Comparison -->
          <div class="row g-0 position-relative" style="min-height: 280px">
            <div class="col-6 position-relative">
              <img
                src="/<%= img.originalImage %>"
                class="img-fluid h-100 object-fit-cover"
                alt="Original Image"
              />
              <span
                class="badge bg-dark bg-opacity-75 position-absolute top-0 start-0 m-2 px-2 py-1 rounded-pill"
                >Original</span
              >
            </div>
            <div class="col-6 position-relative">
              <img
                src="/<%= img.cartoonImage %>"
                class="img-fluid h-100 object-fit-cover"
                alt="Toonified Image"
              />
              <span
                class="badge bg-info bg-opacity-75 text-dark position-absolute top-0 end-0 m-2 px-2 py-1 rounded-pill"
                >Toonified</span
              >
            </div>
          </div>

          <!-- Card Body -->
          <div class="card-body text-center p-4">
            <h5 class="card-title fw-bold text-truncate"><%= img.title %></h5>
            <p class="text-muted small mb-3">
              <i class="bi bi-calendar-event me-1"></i>
              <%= new Date(img.createdAt).toLocaleDateString() %>
            </p>
            <div class="d-flex justify-content-center gap-3">
              <!-- Download only if paid + not expired -->
              <% if (user.plan !== "Free Plan" && (!user.planExpiry || new
              Date(user.planExpiry) > new Date())) { %>
              <a
                href="/<%= user.username %>/image/<%= img._id %>/download"
                class="btn btn-sm btn-outline-success rounded-pill px-3"
              >
                ‚¨áÔ∏è Download
              </a>
              <% } else { %>
              <a
                href="/<%= user.username %>/pricing"
                class="btn btn-sm btn-outline-warning rounded-pill px-3"
              >
                üîí Upgrade to Download
              </a>
              <% } %>

              <!-- Delete -->
              <form
                action="/<%= user.username %>/image/<%= img._id %>?_method=DELETE"
                method="POST"
                onsubmit="return confirm('Are you sure you want to delete this image?');"
              >
                <button
                  type="submit"
                  class="btn btn-sm btn-outline-danger rounded-pill px-3"
                >
                  <i class="bi bi-trash"></i> Delete
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
      <% }) %> <% } else { %>
      <p class="text-muted">No images uploaded yet.</p>
      <% } %>
    </div>
  </div>

  <style>
    .hover-card {
      transition: transform 0.2s ease-in-out;
    }
    .hover-card:hover {
      transform: scale(1.02);
    }
    body.dark-mode {
      background: linear-gradient(135deg, #1e1e2f, #2c2c3e, #1a1a2e);
      color: #f1f1f1;
    }
    body.dark-mode .card {
      background: #2c2c3e;
      color: #f1f1f1;
    }
  </style>
</body>
