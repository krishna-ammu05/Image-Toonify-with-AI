<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Toonify Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet"/>
  <style>
    body {
      background: linear-gradient(135deg, #e0f7fa, #fffde7, #fce4ec);
      min-height: 100vh;
      font-family: 'Segoe UI', sans-serif;
      transition: all 0.3s ease-in-out;
    }

    /* Sidebar */
    .sidebar {
      position: fixed;
      top: 0;
      left: 0;
      height: 100vh;
      width: 250px;
      background: linear-gradient(180deg, #a1c4fd, #c2e9fb, #fbc2eb);
      color: #222;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      padding: 20px 15px;
      overflow-y: auto;
    }

    .sidebar .nav-link {
      color: #222;
      font-weight: 500;
      border-radius: 10px;
      margin: 5px 0;
      transition: all 0.3s ease;
    }

    .sidebar .nav-link:hover {
      background-color: rgba(255,255,255,0.4);
      transform: translateX(5px);
    }

    .sidebar .nav-link.active {
      background: #0d6efd;
      color: #fff;
    }

    /* Top Navbar */
    .top-bar {
      position: fixed;
      top: 0;
      left: 250px; /* start after sidebar */
      right: 0;
      height: 60px;
      background: linear-gradient(90deg, #e0f7fa, #f1f8e9, #fce4ec);
      display: flex;
      align-items: center;
      justify-content: flex-end;
      padding: 0 20px;
      z-index: 1000;
      border: none;
      box-shadow: none;
    }

    .top-bar .btn {
      margin-left: 10px;
    }

    /* Main content */
    main {
      margin-left: 250px; /* same as sidebar width */
      padding: 80px 20px 20px;
    }

    /* Dark mode */
    body.dark-mode {
      background: linear-gradient(135deg, #1e1e2f, #2c2c3e, #1a1a2e);
      color: #f1f1f1;
    }

    body.dark-mode .sidebar {
      background: linear-gradient(180deg, #111827, #1f2937);
      color: #f1f1f1;
    }

    body.dark-mode .sidebar .nav-link {
      color: #f1f1f1;
    }

    body.dark-mode .sidebar .nav-link.active {
      background: #2563eb;
      color: #fff;
    }

    body.dark-mode .top-bar {
      background: linear-gradient(90deg, #2c2c3e, #1e1e2f);
    }
  </style>
</head>
<body>
  <!-- Sidebar -->
  <nav class="sidebar">
    <div>
      <h2 class="text-center fw-bold mb-4">ðŸŽ¨ Toonify</h2>
      <ul class="nav flex-column">
        <li class="nav-item"><a class="nav-link active" href="/userdashboard"><i class="bi bi-house-door me-2"></i> Dashboard</a></li>
        <li class="nav-item"><a class="nav-link" href="/profile"><i class="bi bi-person me-2"></i> My Profile</a></li>
        <li class="nav-item"><a class="nav-link" href="/toonifiedImages"><i class="bi bi-images me-2"></i> My Gallery</a></li>
        <li class="nav-item"><a class="nav-link" href="/pricing"><i class="bi bi-cash-stack me-2"></i> Pricing</a></li>
        <li class="nav-item"><a class="nav-link" href="/upload"><i class="bi bi-upload me-2"></i> Toonify Image</a></li>
        <li class="nav-item"><a class="nav-link" href="/settings"><i class="bi bi-gear me-2"></i> Settings</a></li>
      </ul>
    </div>
    <div class="mt-auto">
      <a class="nav-link text-danger" href="/logout"><i class="bi bi-box-arrow-right me-2"></i> Logout</a>
    </div>
  </nav>

  <!-- Top Navbar -->
  <nav class="top-bar">
    <button class="btn btn-primary btn-sm">âœ¨ Toonify</button>
    <button id="modeToggle" class="btn btn-outline-dark btn-sm ms-2">
      <i class="bi bi-moon"></i>
    </button>
    <i class="bi bi-person-circle fs-3 ms-3"></i>
  </nav>

  <!-- Main Content -->
  <main>
    <%- body %>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Toggle dark mode
    const toggleBtn = document.getElementById("modeToggle");
    toggleBtn.addEventListener("click", () => {
      document.body.classList.toggle("dark-mode");
      const icon = toggleBtn.querySelector("i");
      icon.classList.toggle("bi-moon");
      icon.classList.toggle("bi-brightness-high");
    });
  </script>
</body>
</html>
