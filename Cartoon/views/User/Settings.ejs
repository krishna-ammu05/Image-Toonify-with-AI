<% layout('User/user_Boilerplate') -%>

<section class="container mt-5">
  <h2 class="text-center mb-4 fw-bold">⚙️ User Settings</h2>

  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow">
        <div class="card-body">

          <!-- User Settings Form -->
          <form action="/user/settings" method="POST">
            <!-- Full Name -->
            <div class="mb-3">
              <label for="fullName" class="form-label">Full Name</label>
              <input type="text" class="form-control" id="fullName" name="fullName" placeholder="Enter your full name">
            </div>

            <!-- Email -->
            <div class="mb-3">
              <label for="email" class="form-label">Email Address</label>
              <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email">
            </div>

            <!-- Password -->
            <div class="mb-3">
              <label for="password" class="form-label">Change Password</label>
              <input type="password" class="form-control" id="password" name="password" placeholder="New password">
            </div>

            <!-- Notification Preferences -->
            <div class="mb-3 form-check">
              <input type="checkbox" class="form-check-input" id="emailNotifications" name="emailNotifications">
              <label class="form-check-label" for="emailNotifications">Receive email notifications</label>
            </div>

            <button type="submit" class="btn btn-primary w-100">Save Changes</button>
          </form>
          <!-- End Form -->

        </div>
      </div>
    </div>
  </div>
</section>
