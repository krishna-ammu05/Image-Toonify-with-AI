<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Toonify Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    body {
      background: linear-gradient(135deg, #fdfbfb, #ebedee);
      min-height: 100vh;
      transition: all 0.3s ease-in-out;
      font-family: 'Segoe UI', sans-serif;
    }

    /* Sidebar */
    .sidebar {
      min-height: 100vh;
      background: linear-gradient(180deg, #0d6efd, #1a73e8);
      color: white;
      transition: background 0.3s;
    }
    .sidebar h3 {
      font-weight: bold;
      color: #fff;
    }
    .sidebar .nav-link {
      color: #f1f1f1;
      font-weight: 500;
      border-radius: 12px;
      margin: 4px 0;
      transition: all 0.3s;
    }
    .sidebar .nav-link:hover {
      background: rgba(255,255,255,0.2);
      transform: translateX(5px);
    }
    .sidebar .nav-link.active {
      background: #fff !important;
      color: #0d6efd !important;
      font-weight: bold;
    }
    body {
      background: linear-gradient(135deg, #e0f7fa, #fffde7, #fce4ec);
      min-height: 100vh;
      transition: all 0.3s ease-in-out;
      font-family: 'Segoe UI', sans-serif;
    }

/* Dark mode background */
    body.dark-mode {
       background: linear-gradient(135deg, #1e1e2f, #2c2c3e, #1a1a2e);
       color: #f1f1f1;
}

    /* Topbar */
    .topbar {
      background: linear-gradient(90deg, #ffecd2, #fcb69f);
      border: none;
      border-radius: 50px;
      padding: 10px 20px;
      box-shadow: 0px 4px 15px rgba(0,0,0,0.1);
    }
    .topbar input {
      border: none;
      background: transparent;
    }
    .topbar input::placeholder {
      color: #888;
    }

    /* Cards */
    .card {
      border: none;
      border-radius: 16px;
      transition: all 0.3s ease-in-out;
    }
    .card:hover {
      transform: translateY(-5px);
      box-shadow: 0px 8px 20px rgba(0,0,0,0.15);
    }

    /* Gallery images */
    .gallery-img {
      border-radius: 12px;
      transition: transform 0.3s;
    }
    .gallery-img:hover {
      transform: scale(1.05);
    }

    /* Dark mode */
    body.dark-mode {
      background: #1e1e2f;
      color: #f1f1f1;
    }
    body.dark-mode .topbar {
      background: linear-gradient(90deg,#2c3e50,#4ca1af);
    }
    body.dark-mode .sidebar {
      background: linear-gradient(180deg, #111827, #1f2937);
    }
    body.dark-mode .card {
      background: #2c2c3e;
      color: #f1f1f1;
    }
    body.dark-mode .gallery-img {
      border: 2px solid #555;
    }
  </style>
</head>
<body>
  <div class="container-fluid">
    <div class="row">
      
      <!-- Sidebar -->
      <nav class="col-md-3 col-lg-2 d-md-block sidebar p-3">
        <h3 class="text-center mb-4">ðŸŽ¨ Toonify</h3>
        <ul class="nav flex-column">
          <li class="nav-item"><a class="nav-link active" href="/userdashboard"><i class="bi bi-house-door me-2"></i> Dashboard</a></li>
          <li class="nav-item"><a class="nav-link" href="/profile"><i class="bi bi-person me-2"></i> My Profile</a></li>
          <li class="nav-item"><a class="nav-link" href="/toonifiedImages"><i class="bi bi-images me-2"></i> My Gallery</a></li>
          <li class="nav-item"><a class="nav-link" href="/pricing"><i class="bi bi-cash-stack me-2"></i> Pricing</a></li>
          <li class="nav-item"><a class="nav-link" href="/upload"><i class="bi bi-upload me-2"></i> Toonify Image</a></li>
          <li class="nav-item"><a class="nav-link" href="/settings"><i class="bi bi-gear me-2"></i> Settings</a></li>
          <li class="nav-item"><a class="nav-link text-danger" href="#"><i class="bi bi-box-arrow-right me-2"></i> Logout</a></li>
        </ul>
      </nav>

      <!-- Main Content -->
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        
        <!-- Topbar -->

<div class="d-flex justify-content-between align-items-center shadow-sm p-2 px-3 rounded-pill bg-light mb-4 mt-3">
  <div class="d-flex align-items-center flex-grow-1">
    <!-- Search -->
    <form class="d-flex flex-grow-1 rounded-pill border overflow-hidden me-3">
      <input class="form-control border-0" type="search" placeholder="Search images, styles..." aria-label="Search">
    </form>
    <button type="button" class="btn btn-primary me-3">
      <i class="bi bi-magic"></i> Toonify
    </button>
    <button id="modeToggle" class="btn btn-outline-secondary me-3">
      <i class="bi bi-moon"></i>
    </button>
    <a href="#" class="btn btn-outline-primary">
      <i class="bi bi-person-circle"></i>
    </a>
  </div>
</div>


        <!-- User Details -->
        <div class="row my-4">
          <div class="col-md-6">
            <div class="card shadow-sm p-3">
              <h5 id="userName">John Doe</h5>
              <p id="userEmail">johndoe@email.com</p>
              <span class="badge bg-success" id="userPlan">Free Plan</span>
            </div>
          </div>
          <div class="col-md-6">
            <div class="card shadow-sm p-3 text-center">
              <h6>Usage Stats</h6>
              <div class="d-flex justify-content-around mt-3">
                <div>
                  <strong id="uploads">12</strong><br>Uploads
                </div>
                <div>
                  <strong id="conversions">47</strong><br>Conversions
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- My Gallery -->
        <h4 class="mb-3">ðŸ“¸ My Gallery (Original vs Cartoon)</h4>
        <div class="row g-3">
          <!-- Example Dynamic Gallery Card -->
          <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm p-2">
              <div class="row">
                <div class="col-6">
                  <img src="original.jpg" class="img-fluid gallery-img" alt="Original">
                  <p class="text-center mt-1">Original</p>
                </div>
                <div class="col-6">
                  <img src="cartoon.jpg" class="img-fluid gallery-img" alt="Cartoon">
                  <p class="text-center mt-1">Cartoon</p>
                </div>
              </div>
              <div class="d-flex justify-content-between mt-2">
                <button class="btn btn-success btn-sm"><i class="bi bi-download"></i> Download</button>
                <button class="btn btn-outline-primary btn-sm"><i class="bi bi-share"></i> Share</button>
              </div>
            </div>
          </div>
          <!-- Repeat dynamically with backend data -->
        </div>

      </main>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Dark/Light mode toggle
    const modeBtn = document.getElementById("modeToggle");
    modeBtn.addEventListener("click", () => {
      document.body.classList.toggle("dark-mode");
      const icon = modeBtn.querySelector("i");
      if (document.body.classList.contains("dark-mode")) {
        icon.classList.replace("bi-moon", "bi-brightness-high");
      } else {
        icon.classList.replace("bi-brightness-high", "bi-moon");
      }
    });
  </script>
</body>
</html>
