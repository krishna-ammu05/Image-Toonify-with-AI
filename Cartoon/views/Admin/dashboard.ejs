<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Toonify Admin Dashboard</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>
  </head>
  <body class="bg-light">
    <div class="d-flex">
      <!-- Sidebar -->
      <nav class="bg-white border-end vh-100 p-3" style="width: 250px">
        <h4 class="fw-bold mb-4">Toonify Admin</h4>
        <ul class="nav flex-column">
          <li class="nav-item">
            <a href="/dashboard" class="nav-link active text-primary fw-bold">
              üìä Dashboard
            </a>
          </li>
          <li class="nav-item">
            <a href="/users" class="nav-link text-dark">üë• Users</a>
          </li>
          <li class="nav-item">
            <a href="/admin/images" class="nav-link text-dark">üñºÔ∏è Images</a>
          </li>
          <li class="nav-item">
            <a href="/subscriptions" class="nav-link text-dark"
              >üí≥ Subscriptions</a
            >
          </li>
          <li class="nav-item">
            <a href="/payments" class="nav-link text-dark">üí∞ Payments</a>
          </li>
          <li class="nav-item">
            <a href="/system-health" class="nav-link text-dark"
              >‚öôÔ∏è System Health</a
            >
          </li>
          <li class="nav-item">
            <a href="/settings" class="nav-link text-dark">‚öôÔ∏è Settings</a>
          </li>
          <li class="nav-item">
            <a href="/logout" class="nav-link text-danger">üö™ Logout</a>
          </li>
        </ul>
      </nav>

      <!-- Main Content -->
      <main class="flex-grow-1 p-4">
        <!-- Header -->
        <header class="d-flex justify-content-between align-items-center mb-4">
          <div class="input-group w-50">
            <input
              type="text"
              class="form-control rounded-pill"
              placeholder="Search..."
            />
          </div>
          <div class="d-flex align-items-center gap-2">
            <span class="fw-semibold">Admin</span>
            <span class="text-muted">‚ñº</span>
          </div>
        </header>

        <!-- Stats Cards -->
        <div class="row g-4 mb-4">
          <div class="col-md-3">
            <div class="card shadow-sm border-0 p-3">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h3 class="fw-bold">
                    <%= dashboardData.totalUsers || '1200' %>
                  </h3>
                  <small class="text-muted">Total Users</small>
                </div>
                <div class="fs-3 text-primary">üë•</div>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card shadow-sm border-0 p-3">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h3 class="fw-bold">
                    <%= dashboardData.totalConversions || '4500' %>
                  </h3>
                  <small class="text-muted">Conversions</small>
                </div>
                <div class="fs-3 text-info">üí¨</div>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card shadow-sm border-0 p-3">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h3 class="fw-bold">
                    $<%= dashboardData.revenue || '2300' %>
                  </h3>
                  <small class="text-muted">Revenue</small>
                </div>
                <div class="fs-3 text-success">üí∞</div>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card shadow-sm border-0 p-3">
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <h3 class="fw-bold">
                    <%= dashboardData.activeSubscriptions || '300' %>
                  </h3>
                  <small class="text-muted">Active Subs</small>
                </div>
                <div class="fs-3 text-warning">üìà</div>
              </div>
            </div>
          </div>
        </div>

        <!-- Charts -->
        <div class="row g-4 mb-4">
          <div class="col-lg-8">
            <div class="card shadow-sm border-0 p-3">
              <h5 class="fw-bold mb-3">Conversions per Day</h5>
              <canvas id="conversionsChart" height="150"></canvas>
            </div>
          </div>
          <div class="col-lg-4">
            <div class="card shadow-sm border-0 p-3">
              <h5 class="fw-bold mb-3">Conversion Types</h5>
              <canvas id="typesChart" height="200"></canvas>
            </div>
          </div>
        </div>

        <!-- Recent Activity -->
        <div class="card shadow-sm border-0 p-3">
          <h5 class="fw-bold mb-3">Recent Activity</h5>
          <div class="table-responsive">
            <table class="table align-middle">
              <thead class="table-light">
                <tr>
                  <th>User</th>
                  <th>Action</th>
                  <th>Time</th>
                </tr>
              </thead>
              <tbody>
                <% if (dashboardData.recentActivity &&
                dashboardData.recentActivity.length > 0) { %> <%
                dashboardData.recentActivity.forEach(activity => { %>
                <tr>
                  <td class="fw-semibold"><%= activity.user %></td>
                  <td><%= activity.action %></td>
                  <td class="text-muted"><%= activity.time %></td>
                </tr>
                <% }) %> <% } else { %>
                <tr>
                  <td class="fw-semibold">Krish</td>
                  <td>Uploaded an image</td>
                  <td class="text-muted">2 minutes ago</td>
                </tr>
                <tr>
                  <td class="fw-semibold">Mark</td>
                  <td>Converted an image</td>
                  <td class="text-muted">15 minutes ago</td>
                </tr>
                <tr>
                  <td class="fw-semibold">Sharon</td>
                  <td>Logged in</td>
                  <td class="text-muted">30 minutes ago</td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </main>
    </div>

    <!-- Bootstrap + Charts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      // Line Chart
      const conversionsData = JSON.stringify(
        dashboardData.conversionsPerDay || [
          { day: "Mon", conversions: 50 },
          { day: "Tue", conversions: 80 },
          { day: "Wed", conversions: 65 },
          { day: "Thu", conversions: 220 },
          { day: "Fri", conversions: 150 },
          { day: "Sat", conversions: 45 },
          { day: "Sun", conversions: 75 },
        ]
      );

      new Chart(document.getElementById("conversionsChart"), {
        type: "line",
        data: {
          labels: conversionsData.map((d) => d.day),
          datasets: [
            {
              data: conversionsData.map((d) => d.conversions),
              borderColor: "#007aff",
              backgroundColor: "rgba(0,122,255,0.1)",
              borderWidth: 3,
              fill: true,
              tension: 0.4,
            },
          ],
        },
        options: { plugins: { legend: { display: false } } },
      });

      // Pie Chart
      const typesData = JSON.stringify(
        dashboardData.conversionTypes || [
          { type: "cartoon", count: 45, color: "#007aff" },
          { type: "sketch", count: 30, color: "#ff9500" },
          { type: "pencil", count: 15, color: "#af52de" },
          { type: "ghibli", count: 10, color: "#32d74b" },
        ]
      );

      new Chart(document.getElementById("typesChart"), {
        type: "doughnut",
        data: {
          labels: typesData.map((d) => d.type),
          datasets: [
            {
              data: typesData.map((d) => d.count),
              backgroundColor: typesData.map((d) => d.color),
              borderWidth: 0,
            },
          ],
        },
        options: { plugins: { legend: { position: "right" } } },
      });
    </script>
  </body>
</html>
