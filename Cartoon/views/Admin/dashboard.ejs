<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Toonify Admin Dashboard</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.9.1/chart.min.js"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background-color: #f5f5f7;
            color: #1d1d1f;
        }

        .container {
            display: flex;
            min-height: 100vh;
        }

        .sidebar {
            width: 250px;
            background: white;
            border-right: 1px solid #e5e5e7;
            padding: 20px 0;
        }

        .logo {
            padding: 0 20px 30px;
            font-size: 24px;
            font-weight: 600;
            color: #1d1d1f;
        }

        .nav-item {
            display: flex;
            align-items: center;
            padding: 12px 20px;
            color: #86868b;
            text-decoration: none;
            transition: all 0.2s;
        }

        .nav-item:hover,
        .nav-item.active {
            background-color: #f5f5f7;
            color: #007aff;
        }

        .nav-item.active {
            border-right: 2px solid #007aff;
        }

        .nav-icon {
            margin-right: 12px;
            width: 20px;
            text-align: center;
        }

        .main-content {
            flex: 1;
            padding: 20px;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
        }

        .search-bar {
            position: relative;
            flex: 1;
            max-width: 400px;
            margin: 0 20px;
        }

        .search-input {
            width: 100%;
            padding: 10px 40px 10px 16px;
            border: 1px solid #e5e5e7;
            border-radius: 20px;
            background-color: #f5f5f7;
            outline: none;
        }

        .search-icon {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: #86868b;
        }

        .admin-info {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .admin-name {
            font-weight: 500;
        }

        .dropdown-arrow {
            color: #86868b;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: white;
            padding: 24px;
            border-radius: 12px;
            border: 1px solid #e5e5e7;
        }

        .stat-value {
            font-size: 32px;
            font-weight: 600;
            margin-bottom: 8px;
        }

        .stat-label {
            color: #86868b;
            font-size: 14px;
        }

        .stat-icon {
            float: right;
            width: 24px;
            height: 24px;
            margin-top: -4px;
        }

        .charts-grid {
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: 20px;
            margin-bottom: 30px;
        }

        .chart-card {
            background: white;
            padding: 24px;
            border-radius: 12px;
            border: 1px solid #e5e5e7;
        }

        .chart-title {
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 20px;
        }

        .chart-container {
            position: relative;
            height: 300px;
        }

        .activity-card {
            background: white;
            padding: 24px;
            border-radius: 12px;
            border: 1px solid #e5e5e7;
        }

        .activity-table {
            width: 100%;
            border-collapse: collapse;
        }

        .activity-table th {
            text-align: left;
            padding: 12px 0;
            border-bottom: 1px solid #e5e5e7;
            color: #86868b;
            font-size: 14px;
            font-weight: 500;
        }

        .activity-table td {
            padding: 12px 0;
            border-bottom: 1px solid #f5f5f7;
        }

        .activity-table tr:last-child td {
            border-bottom: none;
        }

        .user-name {
            font-weight: 500;
        }

        .action {
            color: #86868b;
        }

        .time {
            color: #86868b;
            font-size: 14px;
        }

        .blue { color: #007aff; }
        .orange { color: #ff9500; }
        .purple { color: #af52de; }
        .teal { color: #32d74b; }
    </style>
</head>
<body>
    <div class="container">
        <!-- Sidebar -->
        <nav class="sidebar">
            <div class="logo">Toonify Admin</div>
            <a href="/dashboard" class="nav-item active">
                <span class="nav-icon">üìä</span>
                Dashboard
            </a>
            <a href="/users" class="nav-item">
                <span class="nav-icon">üë•</span>
                Users
            </a>
            <a href="/images" class="nav-item">
                <span class="nav-icon">üñºÔ∏è</span>
                Images
            </a>
            <a href="/subscriptions" class="nav-item">
                <span class="nav-icon">üí≥</span>
                Subscriptions
            </a>
            <a href="/payments" class="nav-item">
                <span class="nav-icon">üí∞</span>
                Payments
            </a>
            <a href="/system-health" class="nav-item">
                <span class="nav-icon">‚öôÔ∏è</span>
                System Health
            </a>
            <a href="/settings" class="nav-item">
                <span class="nav-icon">‚öôÔ∏è</span>
                Settings
            </a>
            <a href="/logout" class="nav-item">
                <span class="nav-icon">üö™</span>
                Logout
            </a>
        </nav>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Header -->
            <header class="header">
                <div class="search-bar">
                    <input type="text" class="search-input" placeholder="Search...">
                    <span class="search-icon">üîç</span>
                </div>
                <div class="admin-info">
                    <span class="admin-name">Admin</span>
                    <span class="dropdown-arrow">‚ñº</span>
                </div>
            </header>

            <!-- Stats Grid -->
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon blue">üë•</div>
                    <div class="stat-value"><%= dashboardData.totalUsers || '1200' %></div>
                    <div class="stat-label">Total Users</div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon blue">üí¨</div>
                    <div class="stat-value"><%= dashboardData.totalConversions || '4500' %></div>
                    <div class="stat-label">Total Conversions</div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon blue">üí∞</div>
                    <div class="stat-value">$<%= dashboardData.revenue || '2300' %></div>
                    <div class="stat-label">Revenue</div>
                </div>
                <div class="stat-card">
                    <div class="stat-icon blue">üìà</div>
                    <div class="stat-value"><%= dashboardData.activeSubscriptions || '300' %></div>
                    <div class="stat-label">Active Subscriptions</div>
                </div>
            </div>

            <!-- Charts Grid -->
            <div class="charts-grid">
                <!-- Line Chart -->
                <div class="chart-card">
                    <h3 class="chart-title">Conversions per Day</h3>
                    <div class="chart-container">
                        <canvas id="conversionsChart"></canvas>
                    </div>
                </div>

                <!-- Pie Chart -->
                <div class="chart-card">
                    <h3 class="chart-title">Conversion Types</h3>
                    <div class="chart-container">
                        <canvas id="typesChart"></canvas>
                    </div>
                </div>
            </div>

            <!-- Recent Activity -->
            <div class="activity-card">
                <h3 class="chart-title">Recent Activity</h3>
                <table class="activity-table">
                    <thead>
                        <tr>
                            <th>User</th>
                            <th>Action</th>
                            <th>Time</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (dashboardData.recentActivity && dashboardData.recentActivity.length > 0) { %>
                            <% dashboardData.recentActivity.forEach(activity => { %>
                                <tr>
                                    <td class="user-name"><%= activity.user %></td>
                                    <td class="action"><%= activity.action %></td>
                                    <td class="time"><%= activity.time %></td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td class="user-name">Krish</td>
                                <td class="action">Uploaded an image</td>
                                <td class="time">2 minutes ago</td>
                            </tr>
                            <tr>
                                <td class="user-name">Mark</td>
                                <td class="action">Converted an image</td>
                                <td class="time">15 minutes ago</td>
                            </tr>
                            <tr>
                                <td class="user-name">Sharon</td>
                                <td class="action">Logged in</td>
                                <td class="time">30 minutes ago</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </main>
    </div>

    <script>
        // Conversions per Day Chart
        const conversionsData = <%- JSON.stringify(dashboardData.conversionsPerDay || [
            { day: 'Mon', conversions: 50 },
            { day: 'Tue', conversions: 80 },
            { day: 'Wed', conversions: 65 },
            { day: 'Thu', conversions: 220 },
            { day: 'Fri', conversions: 150 },
            { day: 'Sat', conversions: 45 },
            { day: 'Sun', conversions: 75 }
        ]) %>;

        const ctx1 = document.getElementById('conversionsChart').getContext('2d');
        new Chart(ctx1, {
            type: 'line',
            data: {
                labels: conversionsData.map(d => d.day),
                datasets: [{
                    data: conversionsData.map(d => d.conversions),
                    borderColor: '#007aff',
                    backgroundColor: 'rgba(0, 122, 255, 0.1)',
                    borderWidth: 3,
                    fill: true,
                    tension: 0.4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: {
                            color: '#f5f5f7'
                        }
                    },
                    x: {
                        grid: {
                            display: false
                        }
                    }
                }
            }
        });

        // Conversion Types Chart
        const typesData = <%- JSON.stringify(dashboardData.conversionTypes || [
            { type: 'cartoon', count: 45, color: '#007aff' },
            { type: 'sketch', count: 30, color: '#ff9500' },
            { type: 'pencil', count: 15, color: '#af52de' },
            { type: 'ghibli', count: 10, color: '#32d74b' }
        ]) %>;

        const ctx2 = document.getElementById('typesChart').getContext('2d');
        new Chart(ctx2, {
            type: 'doughnut',
            data: {
                labels: typesData.map(d => d.type),
                datasets: [{
                    data: typesData.map(d => d.count),
                    backgroundColor: typesData.map(d => d.color),
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'right',
                        labels: {
                            usePointStyle: true,
                            padding: 20
                        }
                    }
                }
            }
        });
    </script>
</body>
</html>